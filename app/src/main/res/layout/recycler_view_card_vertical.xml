<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardBackgroundColor="#81C784"
        card_view:cardCornerRadius="12dp"
        card_view:cardElevation="3dp"
        card_view:contentPadding="4dp">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

        <ImageView

                android:src="@mipmap/cat_img"
                android:layout_width="150dp"
                android:layout_height="140dp"
                android:id="@+id/recycler_view_v_image_view"
                android:layout_margin="6dp"
        />

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/recycler_view_v_txt_name"

                    android:textAlignment="center"
                    android:textDirection="anyRtl"
                    android:textSize="26sp"
                    android:text="@string/animal_name_temp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
            />

            <TextView
                    android:id="@+id/recycler_view_v_txt_age"

                    android:textSize="18sp"
                    android:text="@string/animal_age_temp"
                    android:textAlignment="center"
                    android:textDirection="anyRtl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            />

            <TextView
                    android:id="@+id/recycler_view_v_txt_gender"

                    android:textSize="18sp"
                    android:text="@string/animal_gender_temp"
                    android:textAlignment="center"
                    android:textDirection="anyRtl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
            />

            <TextView
                    android:id="@+id/recycler_view_v_txt_location"

                    android:textSize="18sp"
                    android:text="@string/animal_location_temp"
                    android:textAlignment="center"
                    android:textDirection="anyRtl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

            />


        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>