<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"

        android:windowSoftInputMode="adjustResize"
        android:orientation="vertical"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main2"
        android:layoutDirection="rtl"
        >

    <TableLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <TableRow
                android:gravity="center"
                >
            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/auto_complete_location"

                    android:textSize="26sp"
                    android:textColorHint="@color/mainTextLightWhite"
                    android:textColor="@color/mainTextLightWhite"
                    android:backgroundTint="@color/mainTextLightWhite"

                    android:textAlignment="center"
                    android:hint="@string/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    />
        </TableRow>

        <TableRow
                android:gravity="center"
                >

            <TextView
                    android:textColor="@color/mainTextLightWhite"
                    android:textSize="22sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/weight_in_kilo"
                    android:textAlignment="center"
                    android:padding="2sp"
                    />

            <Spinner
                    android:id="@+id/fragment_animal_picker_weight"
                    android:backgroundTint="@color/mainTextLightWhite"
                    android:textDirection="anyRtl"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"

                    android:popupBackground="@color/main2"

                    />

        </TableRow>

        <TableRow
                android:gravity="center"
                >
            <EditText
                    android:id="@+id/fragment_upload_edit_phone"

                    android:textSize="26sp"
                    android:textAlignment="center"
                    android:inputType="phone"
                    android:hint="@string/number_for_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"

                    android:textColorHint="@color/mainTextLightWhite"
                    android:textColor="@color/mainTextLightWhite"
                    android:backgroundTint="@color/mainTextLightWhite"

                    />
        </TableRow>
        <TableRow
                android:gravity="center"
                >
            <EditText
                    android:id="@+id/fragment_upload_edit_story"

                    android:textAlignment="center"
                    android:lines="4"
                    android:hint="@string/animal_story"
                    android:inputType="textMultiLine"
                    android:layout_marginTop="12dp"
                    android:minLines="2"
                    android:maxLines="6"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:scrollbars="vertical"
                    android:maxWidth="220dp"

                    android:textSize="26sp"
                    android:textColorHint="@color/mainTextLightWhite"
                    android:textColor="@color/mainTextLightWhite"
                    android:backgroundTint="@color/mainTextLightWhite"
                    />
        </TableRow>
    </TableLayout>

</ScrollView>
