<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layoutDirection="rtl"
        android:background="@color/main2"
        >

    <bernat.oron.catadoption.model.CustomViewPager
            android:id="@+id/upload_pager"
            android:layoutDirection="rtl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <Button
            android:id="@+id/btn_next"

            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="26dp"
            android:background="@android:color/transparent"
            android:text="@string/Next"
            android:textColor="#fff"

            />

    <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/upload_animal_indicator"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="50dp"
            android:padding="3dp"
            app:selectedColor="@color/main2Trans"
            app:unselectedColor="#fff"
            />

    <Button
            android:id="@+id/btn_back"

            android:visibility="invisible"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Back"
            android:textColor="#fff"
            android:layout_gravity="bottom|start"

            android:layout_margin="26dp"
            />

    <ProgressBar
            android:id="@+id/progress_upload_animal"
            android:visibility="invisible"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />




</androidx.coordinatorlayout.widget.CoordinatorLayout>

